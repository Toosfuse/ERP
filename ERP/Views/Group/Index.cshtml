@model List<ERP.Controllers.GroupViewModel>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">مدیریت گروه‌ها</h4>
        </div>
        <div class="card-body">
            <a asp-action="Create" class="btn btn-success mb-3">ایجاد گروه جدید</a>
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>نام گروه</th>
                        <th>تعداد کاربران</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>@group.Name</td>
                            <td>@group.MemberCount</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@group.GroupID" class="btn btn-sm btn-primary">ویرایش</a>
                                <a asp-action="Delete" asp-route-id="@group.GroupID" class="btn btn-sm btn-danger">حذف</a>
                                <a asp-action="ManageUsers" asp-route-id="@group.GroupID" class="btn btn-sm btn-info">مدیریت کاربران</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
