@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود مهمان - چت</title>
    <link href="~/vali admin rtl/main.css" rel="stylesheet" />
    <link href="~/vali admin rtl/Orange.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: IRANSans, Tahoma, sans-serif;
        }
        .guest-login-container {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            max-width: 400px;
            width: 100%;
        }
        .guest-login-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .guest-login-header h2 {
            color: #333;
            margin-bottom: 10px;
        }
        .guest-login-header p {
            color: #666;
            font-size: 14px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: bold;
        }
        .form-group input, .form-group select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #667eea;
        }
        .btn-submit {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
        }
        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .error-message {
            color: #e74c3c;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="guest-login-container">
        <div class="guest-login-header">
            <h2>ورود مهمان</h2>
            <p>برای دسترسی به چت، اطلاعات خود را وارد کنید</p>
        </div>

        <form id="guestForm">
            <div class="form-group">
                <label>شماره موبایل</label>
                <input type="text" id="phoneNumber" placeholder="09123456789" maxlength="11" required>
            </div>
            <div class="form-group">
                <label>نام</label>
                <input type="text" id="firstName" placeholder="نام" required>
            </div>
            <div class="form-group">
                <label>نام خانوادگی</label>
                <input type="text" id="lastName" placeholder="نام خانوادگی" required>
            </div>
            <div class="form-group">
                <label>بخش</label>
                <select id="groupSelect" required>
                    <option value="">انتخاب بخش...</option>
                </select>
            </div>
            <button type="submit" class="btn-submit" id="loginBtn">ورود</button>
            <div id="loginError" class="error-message"></div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadGroups();
        });

        document.getElementById('guestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const phoneNumber = document.getElementById('phoneNumber').value;
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const groupId = document.getElementById('groupSelect').value;
            const errorDiv = document.getElementById('loginError');
            const btn = document.getElementById('loginBtn');

            if (!/^09\d{9}$/.test(phoneNumber)) {
                errorDiv.textContent = 'شماره موبایل معتبر نیست';
                return;
            }

            if (!groupId) {
                errorDiv.textContent = 'لطفا بخش را انتخاب کنید';
                return;
            }

            btn.disabled = true;
            btn.textContent = 'در حال ورود...';
            errorDiv.textContent = '';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new URLSearchParams();
                formData.append('phoneNumber', phoneNumber);
                formData.append('firstName', firstName);
                formData.append('lastName', lastName);
                formData.append('image', 'Male.png');
                formData.append('groupId', groupId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Chat/GuestDirectLogin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: formData.toString()
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Chat/Index';
                } else {
                    errorDiv.textContent = data.error || 'خطا در ورود';
                }
            } catch (error) {
                errorDiv.textContent = 'خطا در ارتباط با سرور';
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'ورود';
            }
        });

        async function loadGroups() {
            try {
                const response = await fetch('/Chat/GetGroups');
                const groups = await response.json();
                const select = document.getElementById('groupSelect');
                groups.forEach(group => {
                    const option = document.createElement('option');
                    option.value = group.id;
                    option.textContent = group.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('خطا در بارگذاری بخشها', error);
            }
        }
    </script>
    @Html.AntiForgeryToken()
</body>
</html>
